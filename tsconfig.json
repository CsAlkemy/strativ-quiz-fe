{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": ["components/*"],
      "@library/*": ["library/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"]
    }
  },
  "include": ["next-env.d.ts", "library/types/candidate/overwrites", "**/*.mjs", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
